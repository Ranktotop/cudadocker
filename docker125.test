FROM ranktotop/cudadocker:125_nvenc

######################################
###### INSTALL SYSTEM PACKAGES #######
######################################
RUN apt-get update \
    && apt-get install -y ffmpeg\
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

######################################
########### COPY SCRIPTS #############
######################################
COPY testskript125.sh /home/appuser/testskript.sh
COPY testskript125.py /home/appuser/testskript.py
RUN chmod +x /home/appuser/testskript.sh

# Keep the container running
CMD ["sleep", "infinity"]